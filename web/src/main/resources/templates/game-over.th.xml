<thlogic>

    <attr
            sel="#headId"
            th:replace="~{fragments/head :: headFragment}"
    />

    <attr
            sel="#h3Id"
            th:text="${__${T(academy.learnprogramming.util.AttributeNames).RESULT_MESSAGE}__}"
    />

    <attr
            sel="#firstAId"
            th:href="@{__${T(academy.learnprogramming.util.GameMappings).RESTART}__}" th:text="${'Play again'}"
    />

    <attr
            sel="#secondAId"
            th:href="@{__${T(academy.learnprogramming.util.GameMappings).HOME}__}" th:text="Home"
    />

    <attr
            sel="#footerId"
            th:replace="~{fragments/footer :: footerFragment}"
    />

</thlogic>