<thlogic>

    <attr
            sel="#headId"
            th:replace="~{fragments/head :: headFragment}"
    />

    <attr
            sel="#gameTitleId"
            th:text="#{game.title}"
    />

    <attr
            sel="#link"
            th:href="@{__${T(academy.learnprogramming.util.GameMappings).PLAY}__}"
            th:text="#{link.start.game}"
    />

    <attr
            sel="#footerId"
            th:replace="~{fragments/footer :: footerFragment}"
    />

</thlogic>